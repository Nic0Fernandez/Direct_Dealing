<?xml version="1.0" encoding="UTF-8" ?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" padding="25">
    <Text text="Login" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <font>
             <Font size="30" />
        </font>
    </Text>

    <Label text="Email Id:" GridPane.rowIndex="1" />
    <TextField fx:id="userTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Password:" GridPane.rowIndex="2" />
    <PasswordField fx:id="passwordBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Button text="Sign in" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Text fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="6" />
</GridPane>
